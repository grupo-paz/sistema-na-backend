# Configuração do Banco de Dados
# Substitua SEU_USUARIO e SUA_SENHA pelas suas credenciais locais do PostgreSQL.
DATABASE_URL="postgresql://SEU_USUARIO:SUA_SENHA@localhost:5432/na_api"

# Segredo para o JWT (use uma string longa e aleatória)
JWT_SECRET="SEU_SEGREDO_SUPER_SECRETO_AQUI"

# Credenciais do Mailtrap (para ambiente de desenvolvimento)
# Crie uma conta gratuita no mailtrap.io para obter essas credenciais.
EMAIL_HOST="sandbox.smtp.mailtrap.io"
EMAIL_PORT=2525
EMAIL_USER="SEU_USUARIO_MAILTRAP"
EMAIL_PASS="SUA_SENHA_MAILTRAP"